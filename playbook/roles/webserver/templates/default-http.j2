server {
	listen 80;
        {% for host, value in servers|items %}{% if host == ansible_hostname %}{% if value.ipv6 %}listen [::]:80;
        {% endif %}    

	root /var/www/html;

	index index.html index.htm index.nginx-debian.html;

	server_name {{ value.vmname }}.{{ value.domain }};

	location / {
		try_files $uri $uri/ =404;
	}
{% endif %}{% endfor %}}
